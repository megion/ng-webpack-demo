{
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "ESNext",
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "compileOnSave": false,
  "include": ["src"],
  "exclude": [
    "node_modules",
    "public",
    "**/*.test.ts",
    "src/__tests__",
    "src/__mocks__"
  ]
}
