{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "compileOnSave": false,
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts"],
  "angularCompilerOptions": {
    "enableIvy": true,
    "compilationMode": "partial"
  }
}
